{
  "mcpServers": {
    "database": {
      "postgresql": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-postgres"],
        "description": "PostgreSQL database integration with schema inspection",
        "enabled": true,
        "priority": "critical",
        "connection_string": "postgresql://localhost/college_football",
        "config_file": "databases.json"
      },
      "sqlite": {
        "command": "uvx",
        "args": ["mcp-server-sqlite", "--database-path", "data/football_analysis.db"],
        "description": "SQLite database for local data management",
        "enabled": true,
        "priority": "critical",
        "config_file": "databases.json"
      },
      "mcp_toolbox": {
        "command": "npx",
        "args": ["-y", "@mcp-toolbox/databases"],
        "description": "Multi-database support with 10+ systems",
        "enabled": false,
        "priority": "high",
        "config_file": "databases.json"
      }
    },
    "data_processing": {
      "pandas": {
        "command": "uvx",
        "args": ["mcp-server-pandas"],
        "description": "Enhanced data manipulation for 86 opponent-adjusted features",
        "enabled": true,
        "priority": "critical",
        "config_file": "data_processing.json"
      },
      "csv_editor": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-csv-editor"],
        "description": "Advanced CSV processing with 40+ operations for game data",
        "enabled": true,
        "priority": "high",
        "config_file": "data_processing.json"
      }
    },
    "visualization": {
      "echarts": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-echarts"],
        "description": "Dynamic football visualizations and dashboards",
        "enabled": false,
        "priority": "high",
        "config_file": "visualization.json"
      },
      "datawrapper": {
        "command": "uvx",
        "args": ["mcp-server-datawrapper"],
        "description": "Professional chart creation for analytics reports",
        "enabled": false,
        "priority": "high",
        "config_file": "visualization.json"
      },
      "quickchart": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-quickchart"],
        "description": "Real-time chart generation API integration",
        "enabled": false,
        "priority": "medium",
        "config_file": "visualization.json"
      }
    },
    "web_data": {
      "fetch": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-fetch"],
        "description": "Web content retrieval for additional data sources",
        "enabled": true,
        "priority": "high",
        "config_file": "api_integration.json"
      },
      "firecrawl": {
        "command": "npx",
        "args": ["-y", "@firecrawl/firecrawl"],
        "env": {
          "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
        },
        "description": "Enhanced web scraping for sports data beyond CFBD API",
        "enabled": false,
        "priority": "medium",
        "config_file": "api_integration.json"
      }
    },
    "system": {
      "filesystem": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/stephen_bowman/Documents/GitHub/Script_Ohio_2.0"],
        "description": "Enhanced file operations for project organization",
        "enabled": true,
        "priority": "critical",
        "config_file": "system.json"
      },
      "memory": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"],
        "description": "Persistent context for user sessions and analytics history",
        "enabled": true,
        "priority": "high",
        "config_file": "system.json"
      }
    },
    "external_apis": {
      "github": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
        },
        "description": "Version control for notebooks and model management",
        "enabled": false,
        "priority": "medium",
        "config_file": "api_integration.json"
      },
      "google_sheets": {
        "command": "uvx",
        "args": ["mcp-server-google-sheets"],
        "env": {
          "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_CREDS_FILE}"
        },
        "description": "Data sharing and collaboration capabilities",
        "enabled": false,
        "priority": "low",
        "config_file": "api_integration.json"
      }
    }
  },
  "global_settings": {
    "timeout": 30000,
    "max_retries": 3,
    "log_level": "info",
    "cache_enabled": true,
    "cache_duration": 3600,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    }
  },
  "integration": {
    "agent_system": {
      "enhanced_orchestrator": true,
      "database_agent": true,
      "visualization_agent": true,
      "context_awareness": true
    },
    "notebooks": {
      "auto_mcp_tools": true,
      "enhanced_visualizations": true,
      "real_time_data": true
    }
  },
  "deployment": {
    "development": {
      "all_servers_enabled": true,
      "debug_mode": true,
      "hot_reload": true
    },
    "production": {
      "essential_servers_only": true,
      "security_mode": true,
      "monitoring_enabled": true
    }
  }
}