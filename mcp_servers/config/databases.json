{
  "postgresql": {
    "name": "PostgreSQL Database Server",
    "description": "Advanced PostgreSQL integration with schema inspection, optimized queries, and connection pooling for college football analytics",
    "installation": {
      "command": "npx -y @modelcontextprotocol/server-postgres",
      "dependencies": ["postgresql", "psycopg2-binary"],
      "prerequisites": ["PostgreSQL server installed and running"]
    },
    "configuration": {
      "connection_string": "postgresql://localhost/college_football",
      "port": 5432,
      "database": "college_football",
      "user": "postgres",
      "password": "${POSTGRES_PASSWORD}",
      "ssl_mode": "prefer",
      "max_connections": 20,
      "connection_timeout": 30
    },
    "tables": {
      "games": {
        "description": "College football game results and statistics",
        "primary_key": "game_id",
        "expected_rows": 5000,
        "update_frequency": "weekly"
      },
      "teams": {
        "description": "Team information and metadata",
        "primary_key": "team_id",
        "expected_rows": 150,
        "update_frequency": "seasonally"
      },
      "predictions": {
        "description": "ML model predictions and results",
        "primary_key": "prediction_id",
        "expected_rows": 10000,
        "update_frequency": "daily"
      },
      "player_stats": {
        "description": "Individual player statistics",
        "primary_key": "player_stat_id",
        "expected_rows": 500000,
        "update_frequency": "weekly"
      }
    },
    "optimizations": {
      "indexes": [
        "CREATE INDEX idx_games_date ON games(game_date)",
        "CREATE INDEX idx_games_teams ON games(home_team, away_team)",
        "CREATE INDEX idx_predictions_model ON predictions(model_name)",
        "CREATE INDEX idx_player_stats_player ON player_stats(player_id)"
      ],
      "partitioning": {
        "table": "games",
        "strategy": "range",
        "column": "game_date",
        "interval": "1 year"
      }
    },
    "queries": {
      "season_summary": "SELECT season, COUNT(*) as games_played, AVG(home_score + away_score) as avg_points FROM games GROUP BY season ORDER BY season DESC",
      "team_performance": "SELECT team_name, AVG(points_scored) as avg_points, AVG(points_allowed) as avg_defense FROM team_season_stats WHERE season = 2025 GROUP BY team_name ORDER BY avg_points DESC",
      "model_accuracy": "SELECT model_name, COUNT(*) as predictions, AVG(ABS(actual_margin - predicted_margin)) as mae FROM predictions WHERE season = 2025 GROUP BY model_name"
    },
    "backup": {
      "enabled": true,
      "schedule": "daily",
      "retention": "30 days",
      "method": "pg_dump"
    },
    "monitoring": {
      "query_performance": true,
      "connection_pool": true,
      "disk_usage": true,
      "alert_thresholds": {
        "query_time_ms": 1000,
        "cpu_usage": 80,
        "memory_usage": 85
      }
    },
    "integration": {
      "pandas": {
        "connection_method": "sqlalchemy",
        "chunk_size": 10000
      },
      "ml_pipeline": {
        "feature_extraction": true,
        "model_training": true,
        "prediction_logging": true
      }
    }
  },
  "sqlite": {
    "name": "SQLite Database Server",
    "description": "Lightweight local database for development, testing, and small-scale analytics",
    "installation": {
      "command": "uvx mcp-server-sqlite",
      "dependencies": ["sqlite3"],
      "prerequisites": []
    },
    "configuration": {
      "database_path": "data/football_analysis.db",
      "timeout": 30,
      "journal_mode": "WAL",
      "synchronous": "NORMAL",
      "cache_size": 2000
    },
    "tables": {
      "training_data": {
        "description": "ML training datasets cache",
        "source": "model_pack/updated_training_data.csv"
      },
      "model_cache": {
        "description": "Cached ML model predictions",
        "retention": "7 days"
      },
      "user_sessions": {
        "description": "Analytics user session data",
        "privacy": "anonymous"
      }
    },
    "queries": {
      "quick_stats": "SELECT COUNT(*) as total_rows, MIN(season) as earliest_season, MAX(season) as latest_season FROM training_data",
      "model_performance": "SELECT model_name, AVG(accuracy) as avg_accuracy FROM model_cache WHERE created_at > date('now', '-7 days') GROUP BY model_name"
    },
    "maintenance": {
      "vacuum_frequency": "weekly",
      "analyze_frequency": "daily",
      "reindex_frequency": "monthly"
    },
    "integration": {
      "jupyter_notebooks": true,
      "data_exploration": true,
      "prototype_development": true
    }
  },
  "mcp_toolbox": {
    "name": "MCP Toolbox for Databases",
    "description": "Universal database connection tool supporting 10+ database systems with unified API",
    "installation": {
      "command": "npx -y @mcp-toolbox/databases",
      "dependencies": ["generic-db-drivers"],
      "prerequisites": []
    },
    "supported_databases": [
      "MySQL",
      "PostgreSQL",
      "SQLite",
      "SQL Server",
      "Oracle",
      "MongoDB",
      "Cassandra",
      "Redis",
      "BigQuery",
      "Snowflake"
    ],
    "configuration": {
      "auto_discovery": true,
      "connection_pooling": true,
      "query_optimization": true,
      "result_caching": true
    },
    "use_cases": {
      "data_lake_integration": "Connect to cloud data warehouses for advanced analytics",
      "multi_source_analysis": "Combine data from multiple database systems",
      "legacy_system_migration": "Gradual migration from legacy databases"
    },
    "features": {
      "schema_introspection": true,
      "query_builder": true,
      "data_export": true,
      "performance_monitoring": true
    }
  },
  "setup_instructions": {
    "postgresql_setup": [
      "Install PostgreSQL server: brew install postgresql",
      "Start PostgreSQL service: brew services start postgresql",
      "Create database: createdb college_football",
      "Set password for postgres user",
      "Configure connection in databases.json"
    ],
    "sqlite_setup": [
      "Create data directory: mkdir -p data",
      "Initialize database: python scripts/setup_database.py",
      "Import existing data: python scripts/migrate_to_sqlite.py"
    ],
    "mcp_toolbox_setup": [
      "Install additional database drivers as needed",
      "Configure credentials for external databases",
      "Test connections using provided test scripts"
    ]
  },
  "performance_benchmarks": {
    "postgresql": {
      "query_time_small": "<50ms",
      "query_time_large": "<500ms",
      "concurrent_connections": 100,
      "data_throughput": "10MB/s"
    },
    "sqlite": {
      "query_time_small": "<10ms",
      "query_time_large": "<100ms",
      "concurrent_connections": 1,
      "data_throughput": "5MB/s"
    }
  },
  "migration_strategies": {
    "csv_to_database": {
      "source": "model_pack/updated_training_data.csv",
      "target": "postgresql.training_data",
      "script": "scripts/migrate_csv_to_db.py",
      "estimated_time": "10 minutes"
    },
    "excel_integration": {
      "source": "starter_pack/data/*.xlsx",
      "target": "sqlite.historical_data",
      "script": "scripts/excel_to_sqlite.py",
      "estimated_time": "30 minutes"
    }
  }
}