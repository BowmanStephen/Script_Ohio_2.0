{
  "title": "CFBD Client KPIs",
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "API Error Rate",
      "targets": [
        {
          "expr": "sum(rate(cfbd_client_requests_total{outcome='error'}[5m])) / sum(rate(cfbd_client_requests_total[5m]))",
          "legendFormat": "Error Rate"
        }
      ],
      "yaxes": [
        {"format": "percent", "min": 0, "max": 0.05},
        {"format": "short"}
      ]
    },
    {
      "type": "graph",
      "title": "Latency P95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(cfbd_client_latency_ms_bucket[5m])) by (le))",
          "legendFormat": "Latency"
        }
      ],
      "yaxes": [
        {"format": "ms"},
        {"format": "ms"}
      ]
    },
    {
      "type": "graph",
      "title": "Rate Limit Events",
      "targets": [
        {
          "expr": "sum(rate(cfbd_client_rate_limit_hits_total[5m]))",
          "legendFormat": "429 events"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Dataset Freshness",
      "targets": [
        {
          "expr": "max(cfbd_dataset_freshness_seconds{dataset!=''})",
          "legendFormat": "Max Lag"
        }
      ],
      "yaxes": [
        {"format": "s"},
        {"format": "s"}
      ]
    }
  ],
  "schemaVersion": 38,
  "version": 1
}
